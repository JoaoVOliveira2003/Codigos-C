#include <stdio.h>
int main() {
    int a[10], i;
    for (i = 0; i < 10; i++) {
        printf("Digite um número para a posição %d: ", i);
        scanf("%d", &a[i]); 
    }
    for (i = 0; i < 10; i++) {
        if (a[i] % 2 == 0) {
            printf("\nO valor da posição %d é %d", i, a[i]);
        }
    }
    return 0;
}
